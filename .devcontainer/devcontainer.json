{
  "name": "Advent of Code",
  "remoteUser": "vscode",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "UV_VERSION": "latest",
      "BASE_IMAGE": "ubuntu"
    }
  },
  "mounts": [
    "type=bind,source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,readonly"
  ],
  "postCreateCommand": "uv sync --frozen",
  "postStartCommand": "uv run pre-commit install",
  "containerEnv": {
    "DISPLAY": "dummy",
    "UV_PROJECT_ENVIRONMENT": "/home/vscode/.venv"
  },
  "remoteEnv": {
    "PATH": "/home/vscode/.venv/bin:${containerEnv:PATH}"
  },
  "features": {
    // "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    // "ghcr.io/devcontainers/features/aws-cli:1": {},
    // "ghcr.io/devcontainers/features/azure-cli:1": {},
    // "ghcr.io/devcontainers/features/terraform:1": {},
    // "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {"version: "latest", "helm": "latest"}
    "ghcr.io/va-h/devcontainers-features/difftastic:1": {
      "version": "latest"
    },
    "ghcr.io/jsburckhardt/devcontainer-features/just:1": {},
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },
  "runArgs": ["-p", "2222:2222"],
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "donjayamanne.githistory",
        "editorconfig.editorconfig",
        "iulian-radu-at.save-restore-editors",
        "mk12.better-git-line-blame",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "redhat.vscode-yaml",
        "skellock.just",
        "tamasfe.even-better-toml",
        "typefox.open-collaboration-tools",
        "yzhang.markdown-all-in-one",
        "detachhead.basedpyright"
      ],
      "settings": {
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        "files.watcherExclude": {
          ".venv/**": true,
          "**/__pycache__/**": true,
          "**/.mypy_cache/**": true,
          "**/.pytest_cache/**": true
        }
      }
    }
  }
}
