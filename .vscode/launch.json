{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Advent puzzle",
      "type": "debugpy",
      "request": "launch",
      "program": "./puzzles.py",
      "console": "integratedTerminal",
      "args": [
        "${input:secondPuzzleRules}",
        "day${input:puzzleDay}",
      ],
      "cwd": "${workspaceFolder}/",
      "justMyCode": true
    }
  ],
  "inputs": [
    {
      "id": "puzzleDay",
      "description": "Enter number of the puzzle",
      "default": "day_01",
      "type": "promptString"
    },
    {
      "id": "secondPuzzleRules",
      "description": "Run part two of the puzzle",
      "default": "--no-part2",
      "options": ["--part2", "--no-part2"],
      "type": "pickString"
    }
  ]
}
